@model IEnumerable<BookPortal.Models.ReviewsDB>

<div class="container">
    <h1>Category: Journals</h1>


    <div class="tab">
        <button class="tablinks" onclick="tapOpen(event, 'ListedVersion')">Lısted Version</button>
        <a href="/ReviewVisualApperance/Journals"><button class="tablinks" onclick="tapOpen(event, 'Visual')">Virtual Version</button></a>
    </div>

    <div id="ListedVersion" class="tabcontent">

        <table class="table table-striped table-bordered table-hover" id="mydata">
            <thead>
                <tr>
                    <th>Category</th>
                    <th>Book Name</th>
                    <th>Review Type</th>
                    <th>Book Subject</th>
                    <th>Book Analysis</th>
                    <th>Author Name</th>
                    <th>Other Books</th>
                    <th>Date Added</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    if (@item.CategoryId == 3)
                    {
                        <tr class="table-info">
                            <td>@item.Categories</td>
                            <td>@item.BookName</td>
                            <td>@item.ReviewType</td>
                            <td>@item.BookSubject</td>
                            <td>@item.BookAnalysis</td>
                            <td>@item.AuthorName</td>
                            <td>@item.OtherBooks</td>
                            <td>@item.UploadDate</td>
                        </tr>
                    }
                }
            </tbody>
            <!--Table body-->

        </table>
        <!--Table-->
    </div>
</div>



<div id="Visual" class="tabcontent">
    <div class="col-md-12">
        <div class="col-md-3">

        </div>
        <div class="col-md-9">
            @foreach (var item in Model)
            {
                <div class="reviews_content">
                    <div class="col-md-8 col-sm-8">
                        <div class="post">
                            <h2 class="post-title"><a href="blog-post.html">@item.BookName</a></h2>
                            <p class="post-meta">
                                <i class="fa fa-calendar-o first"></i> @item.UploadDate
                                <i class="fa fa-user"></i> @item.AuthorName
                                <i class="fa fa-comment"></i> <a href="#">@item.ReviewId</a>
                            </p>
                            <a href="blog-post.html" class="img-post">
                                <img src="~/img/@item.Picture" alt="post 2" class="img-responsive">
                            </a>
                            <p>

                                @if (@item.Content.Length > 100)
                                {
                                    @(item.Content.Substring(0, 95) + "...")
                                }
                                else
                                {
                                    @item.Content

                                }

                            </p>
                            <a class="btn btn-primary" href="/Content/review_id_@item.ReviewId">Read More <i class="fa fa-angle-right"></i></a>
                        </div><!-- /.post -->
                    </div>
                </div>

            }

        </div>


    </div>




</div>

