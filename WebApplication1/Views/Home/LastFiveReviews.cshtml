@model List<BookPortal.Models.Review>

	<div class="container">
		<h1>Last 5 Reviews</h1>
		<table class="table table-striped table-bordered table-hover" id="mydata">
			<thead>
				<tr>
					<th>Category</th>
					<th>Book Name</th>
					<th>Review Type</th>
					<th>Book Subject</th>
					<th>Book Analysis</th>
					<th>Author Name</th>
					<th>Other Books</th>
					<th>Date Added</th>
				</tr>
			</thead>
			<tbody>
				@{ int counter = 5; }
				@{ int counterId = 0; }
				@foreach (var item in Model)
				{
					counterId++;
					if (counter == 0)
					{
						break;
					}
					//if (Model.Capacity - (Model.Capacity - counter) < 5)
					//if ((@item.ReviewId - 1) >= (Model.Count - counter))
					if (counterId - 1 >= (Model.Count - counter))
					{
						<tr class="table-info">
							@*<td>@item.ReviewId</td>*@
							<td>@item.Category</td>
							<td>@item.BookName</td>
							<td>@item.ReviewType</td>
							<td>@item.BookSubject</td>
							<td>@item.BookAnalysis</td>
							<td>@item.AuthorName</td>
							<td>@item.OtherBooks</td>
							<td>@item.DateAdded</td>
						</tr>
						counter--;
					}
				}
			</tbody>
		</table>
	</div>

	<!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
	<script src="jd/jquery.js"></script>
	<!-- Include all compiled plugins (below), or include individual files as needed -->
	<script src="js/bootstrap.min.js"></script>
	<script src="js/jquery.dataTables.min.js"></script>
	<script src="js/dataTables.bootstrap.min.js"></script>
	<script>
		$('#mydata').datatables();
	</script>


