@model List<BookPortal.Models.Review>
<script src="~/Scripts/jquery.shorten.min.js"></script>
<script src="~/Scripts/jquery.shorten.js"></script>
<div class="container">
    <h1>Last 5 Reviews</h1>
    <table class="table table-striped table-bordered table-hover" id="mydata">
        <thead>
            <tr>
                <th>Category</th>
                <th>Book Name</th>
                <th>Review Type</th>
                <th>Book Subject</th>
                <th>Book Analysis</th>
                <th>Author Name</th>
                <th>Other Books</th>
                <th>Date Added</th>
            </tr>
        </thead>
        <tbody>
            @{ int counter = 5; }
            @{ int counterId = 0; }
            @foreach (var item in Model)
            {
                counterId++;
                if (counter == 0)
                {
                    break;
                }
                //if (Model.Capacity - (Model.Capacity - counter) < 5)
                //if ((@item.ReviewId - 1) >= (Model.Count - counter))
                if (counterId - 1 >= (Model.Count - counter))
                {
                    <tr class="table-info">
                        @*<td>@item.ReviewId</td>*@
                        <td>@item.Category</td>
                        <td>@item.BookName</td>
                        <td>@item.ReviewType</td>
                        <td>@item.BookSubject</td>
                        <td>
                            <div class="review">@item.BookAnalysis</div>
                            <script type="text/javascript">
                                $(document).ready(function () {

                                    $(".review").shorten();
                                });
                            </script>
                        </td>
                        <td>@item.AuthorName</td>
                        <td>@item.OtherBooks</td>
                        <td>@item.DateAdded</td>
                    </tr>
                    counter--;
                }
            }
        </tbody>
    </table>
</div>
