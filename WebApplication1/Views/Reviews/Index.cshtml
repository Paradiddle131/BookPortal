
@model IEnumerable<DataLibrary.ModelsD.ReviewModel>

<br /><br />
@using (Html.BeginForm("Index", "Home", FormMethod.Get))
{
	@Html.TextBox("searching")<input type="submit" value="Search" />
}
<table class="table table-striped">
	<thead>
		<tr>
			<th>Category</th>
			<th>Book Name</th>
			<th>Review Type</th>
			<th>Book Subject</th>
			<th>Book Analysis</th>
			<th>Author Name</th>
			<th>Other Books</th>
		</tr>
	</thead>
	<tbody>
		@if (Model.Count() == 0)
		{
			<tr>
				<td colspan="3" style="color:red">
					No Match
				</td>
			</tr>
		}
		else
		{
			foreach (var item in Model)
			{
				<tr>
					<td>@item.Category</td>
					<td>@item.BookName</td>
					<td>@item.ReviewType</td>
					<td>@item.BookSubject</td>
					<td>@item.BookAnalysis</td>
					<td>@item.AuthorName</td>
					<td>@item.OtherBooks</td>
				</tr>
			}
		}
	</tbody>
</table>






