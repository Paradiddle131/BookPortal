
@{
    ViewBag.Title = "Pharaohs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@foreach (var item in Model)
{
    <div class="section-header">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">@item.BookName</h1>
                </div>
            </div>
        </div> <!-- /.container -->
    </div> <!-- /.section-colored -->

    <div class="container container-int">
        <ol class="breadcrumb">
            <li><a href="/">Home</a></li>
            <li class="active">Review</li>
        </ol>
        <div class="row">
            <div class="col-md-8 col-sm-8">
                <div class="post">
                    <h1 class="post-title">@item.BookSubject</h1>
                    <p class="post-meta">
                        <i class="fa fa-calendar-o first"></i> @item.UploadDate
                        <i class="fa fa-user"></i> Admin
                        @*<i class="fa fa-comment"></i> <a href="#">2 comments</a>*@
                    </p>
                    <div class="img-post">
                        <img src="~/img/@item.Picture" alt="post 1" class="img-responsive">
                    </div>
                    <p>@item.Content</p>                   
                </div><!-- /.post -->              
                <hr>
            </div>
        </div>

    </div>


}

